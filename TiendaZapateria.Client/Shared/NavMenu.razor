﻿@using Microsoft.AspNetCore.Components.Authorization
<div class="top-row ps-3 navbar  color-title">
    <div class="container-fluid">
        <h5 class="text-center mt-3" >Tienda Zapateria</h5>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable color" @onclick="ToggleNavMenu">
    <nav class="flex-column">
       
            <AuthorizeView Roles="Administrador, Empleado">
                <Authorized>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="categorias" Match="NavLinkMatch.All">
                            <span class="oi oi-info" aria-hidden="true"></span> Categorias
                        </NavLink>
                    </div>
                </Authorized>
            </AuthorizeView>
        <AuthorizeView Roles="Administrador">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="roles">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Roles
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Administrador">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="usuarios">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Usuarios
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Administrador, Empleado">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="productos">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Productos
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Administrador, Empleado">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="ventas">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Ventas
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Administrador">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="informe">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Informe
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>



        
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
